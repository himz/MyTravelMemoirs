<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mpcs.mytravelmemoirs"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.mpcs.mytravelmemoirs.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mpcs.mytravelmemoirs.CreateTripActivity"
            android:label="@string/title_activity_create_trip" >
        </activity>
        <activity
            android:name="com.mpcs.mytravelmemoirs.ViewOldTripsActivity"
            android:label="@string/title_activity_view_old_trips" >
        </activity>
        <activity
            android:name="com.mpcs.mytravelmemoirs.TripInfoActivity"
            android:label="@string/title_activity_trip_info" >
        </activity>
    </application>

</manifest>